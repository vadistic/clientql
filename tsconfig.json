{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext"],
    "allowJs": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true
  },
  "exclude": ["**/__snapshots__/**", "**/__file_snapshots__/**"]
}
