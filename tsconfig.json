{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "module": "ESNext",

    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "skipLibCheck": true,
    "declaration": true,
    "composite": true
  }
}
